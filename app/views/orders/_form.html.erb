<% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @order, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :product %>
    <%= f.select :product_id, @products.map { |p| [p.name, p.id] }, class: 'form-control' %>
 <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control', placeholder: 'Quantity' %>
  </div>
  <%= f.submit 'Create Order', class: 'btn btn-primary' %>
<% end %>